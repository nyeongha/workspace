package oop.class07;

import java.util.Scanner;

public class width {
	
	public static void main(String[] args) {
		System.out.println("넓이를 계싼할 도형은? 1.원 2.사각형 3.삼각형");
		Scanner sc=new Scanner(System.in);
		int i=sc.nextInt();
		
		if(i==1) {
			System.out.println("원의 넓이를 계산합니다.");
			System.out.print("반지름을 입력하세요>");
			int x=sc.nextInt();
			System.out.println("원의 넓이는"+(3.14*x*x)+"입니다.");
		
		}else if(i==2) {
			System.out.println("사각형의 넓이를 계산합니다.");
			System.out.print("가로 길이를 입력하세요 >");
			int garo=sc.nextInt();
			System.out.print("세로 기링를 입력하세요 >");
			int sero=sc.nextInt();
			System.out.println("사각형의 넓이는"+(garo*sero)+"입니다.");
			
		}else if(i==3) {
			System.out.println("삼각형 넓이를 계산합니다.");
			System.out.print("밑변 길이를 입력하세요 >");
			int wd=sc.nextInt();
			System.out.print("높이 기링를 입력하세요 >");
			int hg=sc.nextInt();
			System.out.println("사각형의 넓이는"+(wd*hg*0.5)+"입니다.");
			
		}
		sc.close();
		
	}
	
	
	

}
